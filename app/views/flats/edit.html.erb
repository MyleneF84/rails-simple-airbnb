<div class="container">
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :number_of_guests %>
    <%= f.input :price_per_night %>
    <%= f.submit "#{@flat.persisted? ? "Update" : "Create"} this flat"  %>
  <% end %>
  <%= link_to "Back", flats_path %>
</div>
