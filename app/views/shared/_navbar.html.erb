<div class="navbar d-flex justify-content-between" style="background-color:lightgrey">
  <h4><%= link_to "Simple AirBnB", flats_path, class:"mx-3 text-decoration-none", style:"color:black" %></h4>
  <div class="nav-right mx-3 d-flex">
    <%= form_tag flats_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a flat"
      %>
      <%= submit_tag "Search", class: "mx-2 btn btn-outline-success" %>
    <% end %>
    <%= link_to "Add a Flat", new_flat_path, class:"btn btn-outline-primary" %>
  </div>
</div>
